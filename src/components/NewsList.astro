---
import type { CollectionEntry } from 'astro:content';
import { slugify } from '@/utils/slug';
const { items } = Astro.props as { items: CollectionEntry<'news'>[] };
---
<div class="space-y-6">
  {items.map((n) => (
    <a href={`/news/${n.slug}`} class="block rounded-xl border border-gray-200 dark:border-gray-800 p-4 hover:border-brand">
      <div class="text-sm text-gray-500">{new Date(n.data.date).toLocaleDateString('ja-JP')}</div>
      <div class="mt-1 text-lg font-semibold">{n.data.title}</div>
      {n.data.summary && <p class="mt-2 text-sm text-gray-600 dark:text-gray-300">{n.data.summary}</p>}
      {(n.data.category || (n.data.tags?.length ?? 0) > 0) && (
        <div class="mt-3 flex flex-wrap gap-2 text-xs">
          {n.data.category && (
            <span class="rounded-full bg-gray-100 dark:bg-gray-800 px-2 py-0.5 text-gray-700 dark:text-gray-300">カテゴリ: {n.data.category}</span>
          )}
          {(n.data.tags ?? []).map(t => (
            <span class="rounded-full bg-gray-100 dark:bg-gray-800 px-2 py-0.5 text-gray-700 dark:text-gray-300">#{t}</span>
          ))}
        </div>
      )}
    </a>
  ))}
</div>
