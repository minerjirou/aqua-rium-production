---
import Base from '@/layouts/BaseLayout.astro';
import SocialLinks from '@/components/SocialLinks.astro';
import OutfitGallery from '@/components/OutfitGallery.astro';
import { r2 } from '@/utils/r2';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const members = await getCollection('member');
  return members.map((m) => ({ params: { slug: m.slug }, props: { m } }));
}

const { m } = Astro.props;
const data = m.data;
const { Content } = await m.render();
---
<Base title={`${data.name} | メンバー`} ogType="profile" ogImage={r2(data.avatar)} description={data.bio}>
  <article class="mx-auto max-w-6xl px-4 py-8">
    <div class="grid md:grid-cols-[280px_1fr] gap-8 items-start">
      <div class="md:sticky md:top-6 mb-6 md:mb-0">
        <img src={r2(data.avatar)} alt={`${data.name} avatar`} sizes="(min-width: 1024px) 280px, 45vw" class="w-full aspect-[3/4] object-cover rounded-xl border border-gray-200 dark:border-gray-800" onerror="this.onerror=null;this.src='/images/placeholder-avatar.svg'" />
        <h1 class="mt-4 text-2xl font-bold">{data.name}</h1>
        {data.fanTags.length > 0 && (
          <div class="mt-2 flex flex-wrap gap-2">
            {data.fanTags.map((t) => <span class="text-xs rounded-full bg-gray-100 dark:bg-gray-800 px-2 py-0.5 text-gray-600 dark:text-gray-300">#{t}</span>)}
          </div>
        )}
      </div>

      <div class="space-y-10">
        <section>
          <div class="rounded-lg border border-gray-200 dark:border-gray-800 p-4 bg-white/40 dark:bg-gray-900/40">
            <div class="flex flex-wrap items-center gap-4">
              {data.color && <span class="inline-flex items-center gap-2 text-sm"><span class="inline-block h-4 w-4 rounded-full border" style={`background:${data.color}`}></span><span>担当カラー: {data.color}</span></span>}
              {data.reading && <span class="text-sm text-gray-600 dark:text-gray-300">読み: {data.reading}</span>}
              {data.catchphrase && <span class="ml-auto text-sm italic text-brand">{data.catchphrase}</span>}
            </div>
            {data.greeting && <p class="mt-3 text-sm text-gray-700 dark:text-gray-300">{data.greeting}</p>}
          </div>
        </section>
        {data.bio && (
          <section>
            <h2 class="text-xl font-semibold">自己紹介</h2>
            <p class="mt-2 container-prose">{data.bio}</p>
          </section>
        )}

        <section>
          <h2 class="text-xl font-semibold">SNS</h2>
          <div class="mt-3">
            <SocialLinks socials={data.socials} />
          </div>
          {data.xHandle && (
            <div class="mt-4">
              <a class="twitter-timeline" href={`https://twitter.com/${data.xHandle}?ref_src=twsrc%5Etfw`} data-height="420">Tweets by @{data.xHandle}</a>
              <script async src="https://platform.twitter.com/widgets.js"></script>
            </div>
          )}
          {data.youtubeEmbed && (
            <div class="mt-4 aspect-video rounded-lg overflow-hidden border border-gray-200 dark:border-gray-800">
              <iframe src={data.youtubeEmbed} title="YouTube player" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen class="h-full w-full"></iframe>
            </div>
          )}
        </section>

        {data.category && (
          <section>
            <h2 class="text-xl font-semibold">カテゴリ</h2>
            <div class="mt-2 text-sm">
              <a href={`/members/category/${(await import('@/utils/slug')).slugify(data.category)}/page/1`} class="rounded-full border px-2 py-0.5 hover:border-brand">{data.category}</a>
            </div>
          </section>
        )}

        {data.awards.length > 0 && (
          <section>
            <h2 class="text-xl font-semibold">過去の入賞履歴</h2>
            <ul class="mt-3 space-y-2">
              {data.awards.map((a) => (
                <li class="flex items-center gap-3">
                  <span class="text-xs rounded bg-gray-100 dark:bg-gray-800 px-2 py-0.5">{a.year}</span>
                  <span>{a.title}</span>
                </li>
              ))}
            </ul>
          </section>
        )}

        {data.outfits.length > 0 && (
          <section>
            <h2 class="text-xl font-semibold">衣装ギャラリー</h2>
            <div class="mt-3">
              <OutfitGallery outfits={data.outfits} />
            </div>
          </section>
        )}

        <section>
          <h2 class="text-xl font-semibold">詳細</h2>
          <div class="prose dark:prose-invert mt-3">
            <Content />
          </div>
        </section>

        {(data.origin || data.heightCm || data.birthday || data.zodiac || data.likes.length > 0 || data.dislikes.length > 0 || data.features) && (
          <section>
            <h2 class="text-xl font-semibold">プロフィール詳細</h2>
            <div class="mt-3 grid sm:grid-cols-2 gap-4 text-sm">
              {data.origin && <div><span class="text-gray-500">出身:</span> {data.origin}</div>}
              {data.heightCm && <div><span class="text-gray-500">身長:</span> {data.heightCm}cm</div>}
              {data.birthday && <div><span class="text-gray-500">誕生日:</span> {data.birthday}</div>}
              {data.zodiac && <div><span class="text-gray-500">星座:</span> {data.zodiac}</div>}
              {data.likes.length > 0 && <div class="sm:col-span-2"><span class="text-gray-500">好きなもの:</span> {data.likes.join('、')}</div>}
              {data.dislikes.length > 0 && <div class="sm:col-span-2"><span class="text-gray-500">苦手なもの:</span> {data.dislikes.join('、')}</div>}
              {data.features && <div class="sm:col-span-2"><span class="text-gray-500">特徴:</span> {data.features}</div>}
            </div>
          </section>
        )}
      </div>
    </div>
  </article>
  <script type="application/ld+json">
    {JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'Person',
      name: data.name,
      url: Astro.site ? new URL(Astro.url.pathname, Astro.site).toString() : Astro.url.pathname,
      image: r2(data.avatar),
      sameAs: data.socials?.map((s) => s.url) ?? [],
      description: data.bio ?? undefined,
    })}
  </script>
</Base>
