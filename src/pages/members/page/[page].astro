---
import Base from '@/layouts/BaseLayout.astro';
import MemberCard from '@/components/MemberCard.astro';
import Pagination from '@/components/Pagination.astro';
import { getCollection } from 'astro:content';

const PAGE_SIZE = 9;

export async function getStaticPaths() {
  const members = (await getCollection('member')).sort((a, b) => a.data.order - b.data.order);
  const pageCount = Math.max(1, Math.ceil(members.length / PAGE_SIZE));
  return Array.from({ length: pageCount }).map((_, i) => ({
    params: { page: String(i + 1) },
    props: { members, page: i + 1, pageCount },
  }));
}

const { members, page, pageCount } = Astro.props as { members: any[]; page: number; pageCount: number };
const start = (page - 1) * PAGE_SIZE;
const items = members.slice(start, start + PAGE_SIZE);
---
<Base title={`メンバー一覧 - ページ${page}`}>
  <section class="mx-auto max-w-6xl px-4 py-10">
    <h1 class="text-3xl font-bold">メンバー紹介</h1>
    <div class="mt-8 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
      {items.map((m) => (
        <MemberCard name={m.data.name} avatar={m.data.avatar} slug={m.slug} tags={m.data.fanTags} />
      ))}
    </div>
    <Pagination page={page} pageCount={pageCount} basePath="/members/page" />
  </section>
</Base>

